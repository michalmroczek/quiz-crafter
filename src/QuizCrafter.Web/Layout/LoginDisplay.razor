@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <MudText Typo="Typo.caption">@context.User.Identity?.Name!</MudText>
        <MudIconButton Size=Size.Small Icon="@Icons.Material.Filled.Person" Color="Color.Primary" />
        <MudButton Variant="MudBlazor.Variant.Outlined" OnClick=BeginLogOut Color="Color.Secondary"> Log out </MudButton>
    </Authorized>
    <NotAuthorized>
        <MudButton Href="authentication/login"
                   Variant="MudBlazor.Variant.Outlined"
                   EndIcon="@Icons.Material.Filled.Login"
                   Color="Color.Secondary"
                   Style="text-transform:none"
                     Size="Size.Small">
            Log in
        </MudButton>
    </NotAuthorized>
</AuthorizeView>

@code {
    public void BeginLogOut()
    {
        Navigation.NavigateToLogout("authentication/logout");
    }
}
